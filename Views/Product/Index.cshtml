@model IEnumerable<CRUD2.Models.Product>

<h2>Product List</h2>
<a asp-action="Create" class="btn btn-primary">Create New Peoduct</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.name</td>
                <td>@item.price</td>
                <td>@item.description</td>
               <td>
                   <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-warning">Edit</a>
                   <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger">Delete</a>
               </td>
            </tr>
        }
    </tbody>
</table>